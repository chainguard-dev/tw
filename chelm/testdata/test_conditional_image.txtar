# Conditional image block - metrics sidecar enabled
chelm test cg.json --chart=chart
cmp stdout expected.json

-- cg.json --
{
  "images": {
    "app": {
      "values": {
        "image": "${ref}"
      }
    },
    "metrics": {
      "values": {
        "metrics": {"image": "${ref}"}
      }
    }
  },
  "test": {
    "cases": [
      {"name": "default", "images": ["app"]},
      {"name": "with-metrics", "images": ["app", "metrics"], "values": {"metrics": {"enabled": true}}}
    ]
  }
}

-- chart/Chart.yaml --
apiVersion: v2
name: test-chart
version: 0.1.0

-- chart/templates/deployment.yaml --
apiVersion: apps/v1
kind: Deployment
metadata:
  name: test
spec:
  template:
    spec:
      containers:
        - name: app
          image: {{ .Values.image }}
        {{- if .Values.metrics.enabled }}
        - name: metrics
          image: {{ .Values.metrics.image }}
        {{- end }}

-- chart/values.yaml --
image: nginx:latest
metrics:
  enabled: false
  image: prom/statsd-exporter:v0.26.0

