# Images via range loop over map
chelm test cg.json --chart=chart
cmp stdout expected.json

-- cg.json --
{
  "images": {
    "worker1": {
      "values": {
        "workers": {"worker1": {"image": "${ref}"}}
      }
    },
    "worker2": {
      "values": {
        "workers": {"worker2": {"image": "${ref}"}}
      }
    }
  },
  "test": {
    "cases": [
      {"name": "default", "images": ["worker1", "worker2"]}
    ]
  }
}

-- chart/Chart.yaml --
apiVersion: v2
name: test-chart
version: 0.1.0

-- chart/templates/deployment.yaml --
apiVersion: apps/v1
kind: Deployment
metadata:
  name: workers
spec:
  template:
    spec:
      containers:
        {{- range $name, $config := .Values.workers }}
        - name: {{ $name }}
          image: {{ $config.image }}
        {{- end }}

-- chart/values.yaml --
workers:
  worker1:
    image: worker:v1
  worker2:
    image: worker:v2

