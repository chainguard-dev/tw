# Uppercase image ID in cg.json produces a clear validation error
! chelm test cg.json --chart=chart
stderr 'image ID "defaultBackend" contains uppercase characters'

-- cg.json --
{
  "images": {
    "defaultBackend": {
      "values": {
        "image": "${ref}"
      }
    }
  },
  "test": {
    "cases": [
      {"name": "default", "images": ["defaultBackend"]}
    ]
  }
}

-- chart/Chart.yaml --
apiVersion: v2
name: test-chart
version: 0.1.0

-- chart/templates/deployment.yaml --
apiVersion: apps/v1
kind: Deployment
metadata:
  name: test
spec:
  template:
    spec:
      containers:
        - name: app
          image: {{ .Values.image }}

-- chart/values.yaml --
image: nginx:latest
