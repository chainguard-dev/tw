# Multiple YAML documents in single template
chelm test cg.json --chart=chart
cmp stdout expected.json

-- cg.json --
{
  "images": {
    "app": {
      "values": {
        "image": "${ref}"
      }
    },
    "worker": {
      "values": {
        "worker": {"image": "${ref}"}
      }
    }
  },
  "test": {
    "cases": [
      {"name": "default", "images": ["app", "worker"]}
    ]
  }
}

-- chart/Chart.yaml --
apiVersion: v2
name: test-chart
version: 0.1.0

-- chart/templates/all.yaml --
apiVersion: apps/v1
kind: Deployment
metadata:
  name: app
spec:
  template:
    spec:
      containers:
        - name: app
          image: {{ .Values.image }}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: worker
spec:
  template:
    spec:
      containers:
        - name: worker
          image: {{ .Values.worker.image }}

-- chart/values.yaml --
image: nginx:latest
worker:
  image: redis:7

